# Django settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mydatabase
DB_USER=mydatabaseuser
DB_PASSWORD=mydatabasepassword
DB_HOST=localhost
DB_PORT=5432

# JWT Authentication (if used)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=3600

# Email settings (for sending emails)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=email-smtp.amazonaws.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email-smtp-username
EMAIL_HOST_PASSWORD=your-email-smtp-password
DEFAULT_FROM_EMAIL=no-reply@example.com

# Third-party API keys (if applicable)
THIRD_PARTY_API_KEY=your-api-key
